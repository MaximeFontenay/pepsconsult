---
const { text, href, variant = 'primary', ...attributes } = Astro.props

const variantClasses = {
  primary: 'bg-primary text-white hover:bg-primary focus:ring-primary',
  secondary: 'bg-secondary text-white hover:bg-secondary focus:ring-secondary',
}

const buttonClasses = `${variantClasses[variant]} text-base md:text-lg flx-center gap-3 rounded-lg px-6 py-2 rounded-2xl focus:outline-none focus:ring-2 focus:ring-offset-2`
---

{
  href ? (
    <a href={href} class={`${buttonClasses} ${attributes.class || ''}`} {...attributes}>
      {text}
    </a>
  ) : (
    <button class={`${buttonClasses} ${attributes.class || ''}`} {...attributes}>
      {text}
    </button>
  )
}
