---
import DefaultLayout from "../layouts/DefaultLayout.astro";

const { title, description, image, backLink } = Astro.props;
---

<DefaultLayout title={title}>
  <section class="services-page container mt-12 mb-8 lg:my-12">
    <a href={backLink} class="block size-6 lg:size-10">
      <svg
        class="size-full"
        width="43"
        height="38"
        viewBox="0 0 43 38"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M1.23223 17.2322C0.255922 18.2085 0.255922 19.7915 1.23223 20.7678L17.1421 36.6777C18.1184 37.654 19.7014 37.654 20.6777 36.6777C21.654 35.7014 21.654 34.1184 20.6777 33.1421L6.53553 19L20.6777 4.85786C21.654 3.88155 21.654 2.29864 20.6777 1.32233C19.7014 0.346017 18.1184 0.346017 17.1421 1.32233L1.23223 17.2322ZM43 16.5L3 16.5L3 21.5L43 21.5L43 16.5Z"
          fill="#0089DC"></path>
      </svg>
    </a>
    <h1 class="text-lg font-bold text-primary lg:text-2xl my-8 lg:my-14">{title}</h1>
    <div class="flex gap-8 lg:gap-14 max-lg:flex-col">
      <div class="flex flex-col gap-4 lg:gap-14">
        <div set:html={description} />
      </div>
      <img src={image} alt={'Illustration ' + title} class="max-h-96 sticky top-6" />
    </div>
  </section>
</DefaultLayout>
